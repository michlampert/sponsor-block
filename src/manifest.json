{
    "manifest_version": 3,
    "name": "Sponsor Block",
    "description": "Sponsor Block Extension",
    "version": "1.0",
    "action": {
        "default_title": "Click to show an alert",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "js": [
                "content-scripts.js"
            ],
            "matches": [
                "https://www.facebook.com/*",
                "https://facebook.com/*"
            ]
        }
    ]
}
